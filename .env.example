# SIMAKMUR POS - Environment Configuration Template
# PENTING: Copy file ini jadi .env dan generate APP_KEY dengan: php includes/generate_key.php

# Database Configuration
DB_HOST=localhost
DB_PORT=3307
DB_NAME=simakmur_db
DB_USER=root
DB_PASS=

# Application Settings
APP_NAME="SiMakmur POS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/simakmur-pos

# APP_KEY - WAJIB DIISI! Generate dengan: php includes/generate_key.php
APP_KEY=

# Security Settings
SESSION_LIFETIME=3600
HASH_COST=12
CSRF_TOKEN_EXPIRY=7200

# Timezone
TIMEZONE=Asia/Jakarta

# File Upload Settings (dalam MB)
MAX_UPLOAD_SIZE=5
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# API Settings
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_MAX_REQUESTS=60
API_RATE_LIMIT_WINDOW=60
