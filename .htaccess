# SIMAKMUR POS - Apache Configuration

# Prevent directory listing
Options -Indexes

# Protect .env file
<Files ".env">
Require all denied
</Files>

# Protect .env.example
<Files ".env.example">
Require all denied
</Files>

# Protect config files
<Files "config.php">
Require all denied
</Files>

# Protect all hidden files
<FilesMatch "^\.">
Require all denied
</FilesMatch>

